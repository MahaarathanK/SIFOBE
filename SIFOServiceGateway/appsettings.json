{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=127.0.0.1;database=sifo;uid=root;pwd=2023;port=3306"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5001"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      }
    ]
  },
  "ReverseProxyConfig": {
    "Routes": {
      "auth_route": {
        "ClusterId": "authenticationCluster",
        "Match": {
          "Path": "/api/authentication/{**catchAll}"
        }
      }
    },
    "Clusters": {
      "authenticationCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7141"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      }
    }
  }
}
